@model ElectronicJournal.Domain.Entites.Student[]

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <div>

        @using (Html.BeginForm("List", "Home", FormMethod.Post))
        {
            <table cols="5">

                <tr>
                    <td>FIO</td>
                    <td>1</td>
                    <td>2</td>
                    <td>3</td>
                    <td>4</td>
                </tr>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    @Html.HiddenFor(m => m[i].FIO)
                    <tr>
                        <td>@Html.DisplayFor(m => m[i].FIO)</td>
                        @for (int j = 0; j < Model[i].Assessments.Count; j++)
                        {
                            <td>
                                @Html.DropDownListFor(m => m[i].Assessments[j].Grade, new SelectList(new string[]
                                                      { "","2","3","4","5","н","б" }))

                            </td>
                        }
                    </tr>
                }
            </table>
            <p><input type="submit" value="Send" /> </p>
        }
    </div>
</body>
</html>
